
<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <% if can? :create, @comment %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
 
  <% else %>
  <%="YOU ARE NOT Author THIS ARTICAL SORRY CANNOT MAKE A COMMIT"%>
<% end %>
<% end %>
